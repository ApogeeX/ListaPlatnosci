@model PaymentViewModel

<div class="col-6">
		<div class ="card">
			<div class="card-header">
				<h5>Dodaj płatność</h5>

			</div>
			<div class="card-body">
				<form asp-controller="HelloWorld" asp-action="CreatePayment" method="post">
				<div class="mb-3">
						<label class="form-label">Dog Name</label>
						<input asp-for=Name type="text" class=" form-control" />
					</div>
				<div class="mb-3">
						<label class="form-label">Dog Age</label>
						<input asp-for=Age type="number" class="form-control" />
					</div>
					<div class="mb-3">
						<button type="submit" class="btn btn-primary">Zapisz</button>
					</div>
				</form>
			</div>
			<div class ="card-footer">

			</div>
		</div>

</div>